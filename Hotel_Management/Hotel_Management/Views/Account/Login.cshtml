@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-image-section">
    <div class="image-overlay"></div>
    <div class="login-image-content">
        <h1>Welcome to Hotel Management</h1>
        <p>Streamline your hotel operations with our comprehensive management system. Manage reservations, track guests, and optimize your business effortlessly.</p>
    </div>
</div>

<div class="login-form-section">
    <div class="login-container">
        <div class="login-header">
            <h2><i class="fas fa-hotel mr-2"></i>Hotel Management</h2>
            <p class="text-muted">Please enter your credentials</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle mr-2"></i>@ViewBag.Error
            </div>
        }

        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group">
                <label for="username">Username</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Enter username" required>
                </div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-sign-in-alt mr-2"></i>Login
            </button>
        </form>
    </div>
</div>